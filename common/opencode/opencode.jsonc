{
  "plugin": [
    "oh-my-opencode"
  ],
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "model": "opencode/claude-opus-4-5",
  "small_model": "opencode/glm-4.7-free",
  "mcp": {
    "context7": {
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "type": "local"
    },
    "docker": {
      "command": [
        "uvx",
        "mcp-server-docker"
      ],
      "enabled": true,
      "type": "local"
    },
    "filesystem": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/gsv/repos"
      ],
      "enabled": true,
      "type": "local"
    },
    "github": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "enabled": true,
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_PAT"
      },
      "type": "local"
    },
    "sequential-thinking": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true,
      "type": "local"
    }
  }
}
