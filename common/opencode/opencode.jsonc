{
  "plugin": [
    // "oh-my-opencode"
  ],

  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "model": "openai/gpt-5.2",
  "small_model": "openai/gpt-5.2",

  "mcp": {
    "context7": {
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "type": "local"
    },

    "filesystem": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/gsv/repos",
        "/Users/gsv/.config/nix",
        "/Users/gsv/.config/opencode"
      ],
      "enabled": true,
      "type": "local"
    },

    "github": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "enabled": true,
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_PAT"
      },
      "type": "local"
    },

    "sequential-thinking": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true,
      "type": "local"
    },

    "kubernetes": {
      "command": [
        "npx",
        "-y",
        "kubernetes-mcp-server@latest"
      ],
      "enabled": true,
      "environment": {
        "KUBECONFIG": "/Users/gsv/.kube/config"
      },
      "type": "local"
    }
  },

  "agent": {
    "build": {
      "mode": "primary",
      "model": "openai/gpt-5.2-codex",
      "permission": {
        "edit": "allow",
        "bash": "allow"
      }
    },

    "plan": {
      "mode": "primary",
      "model": "openai/gpt-5.2-codex",
      "reasoningEffort": "high",
      "permission": {
        "edit": "deny",
        "bash": "deny"
      }
    },

    "review": {
      "description": "Reviews code for best practices, potential issues and makes sure the code is ready for production",
      "mode": "subagent",
      "model": "openai/gpt-5.2-codex",
      "reasoningEffort": "high",
      "permission": {
        "edit": "deny",
        "bash": "deny"
      }
    },

    "frontend-engineer": {
      "description": "Reviews frontend code, UI and UX to enhance user experience",
      "mode": "subagent",
      "model": "opencode/gemini-3-pro",
      "permission": {
        "edit": "deny",
        "bash": "deny"
      }
    }
  }
}
