{
  "plugin": [
  //  "oh-my-opencode"
  ],

  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "model": "opencode/claude-opus-4-5",
  "small_model": "opencode/glm-4.7-free",

  "mcp": {
    "context7": {
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "type": "local"
    },

    "docker": {
      "command": [
        "uvx",
        "mcp-server-docker"
      ],
      "enabled": true,
      "type": "local"
    },

    "filesystem": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/gsv/repos"
      ],
      "enabled": true,
      "type": "local"
    },

    "github": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "enabled": true,
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_PAT"
      },
      "type": "local"
    },

    "sequential-thinking": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true,
      "type": "local"
    }
  },

  "agent": {
    "build": {
      "mode": "primary",
      "model": "opencode/glm-4.7-free",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },

    "plan": {
      "mode": "primary",
      "model": "opencode/claude-opus-4-5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },

    "review": {
      "description": "Reviews code for best practices, potential issues and makes sure the code is ready for production",
      "mode": "subagent",
      "model": "opencode/gpt-5.2",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },

    "frontend": {
      "description": "Reviews frontend code, UI and UX to enhance user experience",
      "mode": "subagent",
      "model": "opencode/gemini-3-pro",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  }
}
